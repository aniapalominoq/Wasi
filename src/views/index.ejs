
<%- include('partials/header.ejs'); -%>
<!-- MAIN -->

<main>
    <!-- CONTAINER -->

    <section class="container">       
        <h1 class="titulo-principal f-dmb c-blanco-1">Deja que tu mascota se <br>sienta como en casa <br> mientras te vas de viaje.</h1>
    </section>

    <!--  SEARCH Y METRICAS-->
    <section class="searchMetricas bg-primario br-8">
    <!-- SEARCH -->
    <div class="container-search bg-p-claro br-8">
        <p class="title-form f-tm">Elige la fecha que desearías reservar un alojamiento para tu mascota.</p>
        <div class="container-form br-8">
            <form action="/" method="get">
                <div class="row">
                    <div class="col-25">
                        <label class="f-bm c-texto-gris" for="fname" placeholder=" " >Fecha de ingreso</label>
                    </div>
                    <div class="col-75">
                        <input type="date" id="" name="" class="br-8 bg-blanco-1">
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label class="f-bm c-texto-gris" for="lname">Fecha de salida</label>
                    </div>
                    <div class="col-75">
                        <input type="date" id="" name="" class="br-8 bg-blanco-1">
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label class="f-bm c-texto-gris" for="">Ubicación</label>
                    </div>
                    <div class="col-75">
                        <select id="ubicacion" name="" class="br-8 bg-blanco-1">

                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label class="f-bm c-texto-gris" for="">Tipo de mascota</label>
                    </div>
                    <div class="col-75">
                        <select id="" name="" class="br-8 bg-blanco-1">
                            <option value=""></option>
                            <option value="">Perro</option>
                            <option value="">Gato</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label class="f-bm c-texto-gris" for="">Cantidad</label>
                    </div>
                    <div class="col-75">
                        <select id="" name="" class="br-8 bg-blanco-1">
                            <option value=""></option>
                            <option value="">1</option>
                            <option value="">2</option>
                            <option value="">3</option>
                            <option value="">4</option>
                            <option value="">5</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div >
                        <input class="col-75 btt-1" type="submit" value="Enviar">
                    </div>
                </div>
            </form>
        </div>
       </div>
    

    <!--  METRICAS -->
        <div class="container-metricas c-texto">
            <p class="metrica f-hsm">Nuestros números hablan por si solos</p>
            <p class="metrica f-tm"><span class="f-dl">3000</span><br>Anfitriones</p>
            <p class="metrica f-tm"><span class="f-dl">437</span><br>Ciudades registradas</p>
            <p class="metrica f-tm"><span class="f-dl">826</span><br>Mascotas alojadas con éxito</p>
        </div>
    </section>

    <!-- COMO FUNCIONA -->
    
    <section class="comoFunciona bg-blanco-1">
        <h3 class="f-dsb c-texto">Cómo funciona</h3>
        <div class="cards">
            <div class="card">
                <img src="images/home-cards/Ellipse68.png" alt="">
                <img src="images/home-cards/Number1.png" alt="">
                <p>Buscar</p>
                <p class="f-bl c-texto-gris">
                    Encuentra anfitriones cercanos y disponibles para hospedad a tus mascotas.
                </p>
            </div>
            <div class="card">
                <img src="images/home-cards/Ellipse69.png" alt="">
                <img src="images/home-cards/Number2.png" alt="">
                <p class="">Elegir</p>
                <p class="f-bl c-texto-gris">
                    Selecciona el anfitrión que mejor se adapte a tus necesidades y preferencias.
                </p>
            </div>
            <div class="card">
                <img src="images/home-cards/Ellipse67.png" alt="">
                <img src="images/home-cards/Number3.png" alt="">
                <p>Contactar</p>
                <p class="f-bl c-texto-gris">
                    Comunícate con el anfitrión para coordinar detalles y reservar el alojamiento.
                </p>
            </div>
            <div class="card">
                <img src="images/home-cards/Ellipse66.png" alt="">
                <img src="images/home-cards/Number4.png" alt="">
                <p>Disfrutar</p>
                <p class="f-bl c-texto-gris">
                    Deja a tus mascotas en buenas manos y disfruta de tu viaje con tranquilidad.
                </p>
            </div>
        </div>
    </section>

    <!-- RECOMENDADOS PARA TI -->

    <section class="recomendadosParaTi bg-fondo">
        <h3 class="f-dsb c-texto">Recomendado para ti</h3>
        <div id="cards" class="cards">
<!-- primera card -->

            <% alojamientos.map((alojamientos) => { %>

            <div class="paraTiCard bg-blanco-1 br-8">
                <div class="imgCard br-8">
                    <img src="images/images_perfil/<%= alojamientos.usuarioid %>/<%= alojamientos.foto_url %>" alt="">
                </div>
                <div class="cuerpoCard">
                    <div class="esp">
                        <div class="nombreCard">
                            <div>
                                <p class="f-hsb" ><%= alojamientos.nombres %> <br><%= alojamientos.apellidos %></p>
                                <p class="f-bm"><%= alojamientos.ciudad %>, <%= alojamientos.provincia %></p>
                            </div>
                            <div class="clasif">
                                <img src="images/icons/estrella.svg" alt="">
                                <span class="f-bm">5.0</span>
                            </div>
                        </div>
                        <div class="iconosCard">
                            <div class="iconText">
                                <% if(alojamientos.mascotas[0].tipo_mascota === 'Perro') {%>
                                    <img src="images/icons/perro-verde.svg" alt="">
                                <% } else {%>
                                    <img src="images/icons/gato-verde.svg" alt="">
                                <% } %>    
                                <p class="f-bm c-primario"><%= alojamientos.mascotas.length %> <%= alojamientos.mascotas[0].tipo_mascota %></p>
                            </div>
                            <div class="iconText">
                                <% if(alojamientos.tipo_alojamiento === 'Casa') {%>
                                    <img src="images/icons/casa-verde.svg" alt="">
                                <%} else {%>
                                    <img src="images/icons/edificio-verde.svg" alt="">
                                <% } %>    
                                <p class="f-bm c-primario"><%= alojamientos.tipo_alojamiento %></p>
                            </div>
                            <div class="iconText">
                                <% if(alojamientos.aire_libre === 'Jardin' || alojamientos.aire_libre === 'Patio') {%>
                                    <img src="images/icons/jardin-verde.svg" alt="">
                                    <p class="f-bm c-primario"><%= alojamientos.aire_libre %></p>
                                <%} else if(alojamientos.parque_cerca === 'Si'){%>
                                    <img src="images/icons/plaza-cerca-verde.svg" alt="">  
                                    <p class="f-bm c-primario">Parque <br>cerca</p>                               
                                <% } %>
                                
                            </div>
                            <div class="iconText">
                                
                                <% if(alojamientos.cercado === 'Si') { %>
                                    <img src="images/icons/cerco-verde.svg" alt="">
                                    <p class="f-bm c-primario">Cercado</p>
                                <% } else {%>
                                    
                                <% } %>    
                            </div>
                        </div>
                        <p class="f-bm c-texto-gris" >
                            Write an amazing description in this dedicated card section. Each word counts.
                        </p>
                    </div>
                    <div class="precioCard">
                        <div class="izq">
                            <span class="f-tlb">$<%= alojamientos.costo_alojamiento %></span>
                            <p class="f-ll"><%= alojamientos.moneda %>/noche</p>
                        </div>
                        <div class="der">
                            <button class="btt-1">Label</button>
                        </div>
                    </div>
                </div>
            </div>

            <% }) %>

